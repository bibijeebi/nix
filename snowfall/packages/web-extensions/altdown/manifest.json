{
  "manifest_version": 3,
  "name": "Media Downloader",
  "version": "1.0",
  "description": "Download media files by Alt+clicking",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "images.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
